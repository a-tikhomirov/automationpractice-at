<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="http://automationpractice.com autotests" parallel="tests" thread-count="4" data-provider-thread-count="3">
<!--    <parameter name="browser" value="chrome"/>-->
    <test name="MainPage tests" >
        <classes>
            <class name="ru.geekbrains.atikhomirov.automationpractice.at.tests.MainPageTests" />
        </classes>
    </test>

    <test name="Registration tests" verbose="1" parallel="methods" thread-count="2">
        <classes>
            <class name="ru.geekbrains.atikhomirov.automationpractice.at.tests.RegistrationTests"/>
        </classes>
    </test>

    <test name="Sign in and Add to cart tests" verbose="1">
        <classes>
            <class name="ru.geekbrains.atikhomirov.automationpractice.at.tests.AddToCartTest"/>
        </classes>
    </test>

    <test name="Checkout order tests" verbose="1">
        <classes>
            <class name="ru.geekbrains.atikhomirov.automationpractice.at.tests.CheckoutOrderTest"/>
        </classes>
    </test>
</suite>
